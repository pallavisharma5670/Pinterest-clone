<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1604076913837-52ab5629fba9?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-none">Create New Account</h1>
      <form action="/register" method="post">
        <input class="border-2 rounded-full block mt-7 w-full px-3 py-2" type="text" name="username" placeholder="Username">
        <input class="border-2 rounded-full block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
        <input class="border-2 rounded-full block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">
        <input class="border-2 rounded-full block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
        <input class="border-2 rounded-full block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="Contact Number">
        <input class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-violet-600 text-white rounded-full" type="submit" value="Register">
        <p class="text-xs font-semibold text-zinc-700 mt-2 w-3/4 mx-auto text-center">*Terms and conditions apply</p>
        <a class="inline-block mt-2 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login to your account.</a>
      </form>
    </div>
 </div>
